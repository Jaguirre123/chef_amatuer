<h1>new recipe</h1>

<%= form_for @recipe, html: {multipart: true} do |f| %>
<div class="input-field col s6">
    <%= f.label :title %>
    <%= f.text_field :title %>
</div> 
<div class="input-field col s6">
    <%= f.label :content %>
    <%= f.text_field :content%>
</div>
<div class="input-field col s6">
    <%= f.label :category %>
    <%= f.text_field :category%>
</div>
<div class="input-field col s6">
    <%= f.label "Recipe Image" %>
    <%= f.file_field :image, class: 'fileInput'%>
</div>
    <hr>
    <%= f.submit 'Create Recipe', class: 'btn waves-effect waves-orange'%>
<% end %>