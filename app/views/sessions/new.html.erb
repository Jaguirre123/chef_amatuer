<%= link_to root_path do %>
  <i class="material-icons arrows">arrow_back</i>
<% end %>
<h1>Log In</h1>
<hr>
<p id="alert"><%= alert %></p>
<%= form_tag sessions_path do %>
  <div class="input-field col s6">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="input-field col s6">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="btnCenter">
    <div class="actions">
      <%= submit_tag "Log In", class: 'btn' %>
    </div>
  </div>
<% end %>